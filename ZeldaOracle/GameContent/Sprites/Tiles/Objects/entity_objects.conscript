MAPPEDCOLORS	"entities_default", ("orange", "red", "blue", "green", "shaded_blue", "shaded_red");

SOURCE "temp_sheet_entity_objects";
SPRITESET "tiles_entity_objects", (13, 6);
	MULTIPLE BASIC (0, 0), (0, 0), (12, 2); END;
	SINGLE BASIC (12, 1), (12, 1); END;
