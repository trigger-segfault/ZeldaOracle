	MULTIPLE COLOR "trampoline", ("blue", "red"), (0, 4), (0, 4), (3, 1); END;
	MULTIPLE BASIC (3, 4), (3, 4), (10, 1); END;
	MULTIPLE BASIC (0, 5), (0, 5), (13, 1); END;
END;

